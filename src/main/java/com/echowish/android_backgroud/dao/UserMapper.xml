<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.echowish.android_backgroud.dao.UserMapper">
    <resultMap id="userResultMapper" type="com.echowish.android_backgroud.pojo.User">
        <id property="userId" column="user_id"></id>
        <result property="account" column="account"></result>
        <result property="password" column="password"></result>
        <result property="name" column="name"></result>
        <result property="sex" column="sex"></result>
        <result property="grade" column="grade"></result>
        <result property="campus" column="campus"></result>
        <result property="headImageUri" column="headImageUri"></result>
    </resultMap>


    <insert id="insertUser" parameterType="com.echowish.android_backgroud.pojo.User">
        insert into user(user_id,account,password,name,sex,grade,campus,headImageUri)
        values (#{userId},#{account},#{password},#{name},#{sex},#{grade},#{campus},#{headImageUri});
    </insert>

    <select id="queryUserByAccount" parameterType="java.lang.String" resultMap="userResultMapper">
         select * from `user` where account=#{account};
    </select>

    <select id="queryAccountNumsByAccount" parameterType="java.lang.String" resultType="java.lang.Integer">
        select count (*) from  `user` where account=#{account};
    </select>

</mapper>