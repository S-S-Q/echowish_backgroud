<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.echowish.android_backgroud.dao.CommentMapper">
    <resultMap id="commentResultMap" type="com.echowish.android_backgroud.pojo.Comment">
        <result property="postId" column="post_id"></result>
        <result property="userId" column="user_id"></result>
        <result property="content" column="content"></result>
        <result property="time" column="time"></result>
    </resultMap>

    <insert id="insertNewComment" parameterType="com.echowish.android_backgroud.pojo.Comment">
        insert into comment(post_id,user_id,content,time)
        values (#{postId},#{userId},#{content},#{time});
    </insert>

    <delete id="deleteComment" parameterType="com.echowish.android_backgroud.pojo.Comment">
        delete from comment where post_id=#{postId} and user_id=#{userId} and  time=#{time};
    </delete>

    <delete id="deleteCommentByPostId" parameterType="java.lang.Integer">
        delete from comment where post_id=#{postId};
    </delete>

</mapper>